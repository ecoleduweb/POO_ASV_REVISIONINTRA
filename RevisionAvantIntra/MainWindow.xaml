<Window x:Class="RevisionAvantIntra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevisionAvantIntra"
        mc:Ignorable="d"
        Title="MainWindow" Height="140" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--Row1-->
        <Menu>
            <MenuItem Header="Fichier">
                <MenuItem Header="Afficher les informations" Click="OnMenuAfficherInfoClick"></MenuItem>
            </MenuItem>
        </Menu>
        <!--Row2-->
        <Label Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top">Couleur</Label>
        <TextBox Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" x:Name="EdtCouleur" Width="200"/>
        <Label Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">Mls</Label>
        <TextBox Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Name="EdtMls" Width="200"/>
        <Label Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">Couleur</Label>
        <TextBox Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Name="EdtContenu" Width="200"/>
    </Grid>
</Window>
